[user]
  name = shogogg
  email = shogo@studiofly.net
[alias]
  co = checkout
  br = branch
  ci = commit
  sm = submodule
  cp = cherry-pick
  stat = status
  me = merge
[color]
  ui = true
[pull]
  rebase = preserve
[push]
  default = upstream
[merge]
  ff = false
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
  editor = vim

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /opt/homebrew-cask/Caskroom/sourcetree/2.0.2/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
